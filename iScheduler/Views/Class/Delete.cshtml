@model ClassViewModel

@{
    ViewBag.Title = "Delete";
}

<div>
    <h3>
        Are you sure that you want to delete this class?
    </h3>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @*@Html.HiddenFor(model => model.Id)*@
        
        <p>
            @Html.DisplayFor(model => model.Id) - @Html.DisplayFor(model => model.Name)
        </p>

        <input type="submit" value="Confirm deleting" class="btn btn-danger"/>
        @Html.ActionLink("Return to classes' list", "Index")
    }
    
</div>
