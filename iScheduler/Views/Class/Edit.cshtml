@model ClassViewModel

@{
    ViewBag.Title = "Edit class";
}

<h2> Class editing </h2>

@using (Html.BeginForm("Edit", "Class", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { @class = "control-label col-sm-2" })

        <div class="col-sm-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-success col-md-offset-6" value="Save changes">
    </div>
}